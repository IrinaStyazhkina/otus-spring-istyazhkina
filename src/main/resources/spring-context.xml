<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionDao" class="ru.otus.istyazhkina.dao.QuestionDaoImpl">
        <constructor-arg name="resource" value="questions.csv"/>
    </bean>
    <bean id="ioService" class="ru.otus.istyazhkina.service.IOServiceImpl">
    </bean>
    <bean id="questionService" class="ru.otus.istyazhkina.service.QuestionServiceImpl">
        <constructor-arg name="questionDao" ref="questionDao"/>
    </bean>
    <bean id="testingService" class="ru.otus.istyazhkina.service.TestingServiceImpl">
        <constructor-arg name="questionService" ref="questionService"/>
        <constructor-arg name="ioService" ref="ioService"/>
    </bean>
</beans>